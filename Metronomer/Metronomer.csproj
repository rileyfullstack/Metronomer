<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Audio\MetronomeNotes\MetronomeStandard_High.wav" />
    <None Remove="Audio\MetronomeNotes\MetronomeStandard_Low.wav" />
    <None Remove="Audio\MetronomeNotes\Synth-E_High.wav" />
    <None Remove="Audio\MetronomeNotes\Synth-E_Low.wav" />
    <None Remove="Fonts\Fonzie-Medium.ttf" />
    <None Remove="Images\Buttons\ArrowStart.png" />
    <None Remove="Images\Buttons\Pause.png" />
    <None Remove="Images\Buttons\Resume.png" />
    <None Remove="Images\Music-Notes\Eighth.png" />
    <None Remove="Images\Music-Notes\Quater.png" />
    <None Remove="Images\Music-Notes\SixTeenth.png" />
    <None Remove="Metronomer_Icon.png" />
    <None Remove="TextResources\metronome-paths.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Audio\MetronomeNotes\MetronomeStandard_Low.wav">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Audio\MetronomeNotes\Synth-E_High.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Audio\MetronomeNotes\Synth-E_Low.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Fonts\Fonzie-Medium.ttf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="Audio\MetronomeNotes\MetronomeStandard_High.wav">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="TextResources\metronome-paths.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Resource Include="Images\Buttons\ArrowStart.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Images\Buttons\Pause.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Images\Buttons\Resume.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Images\Music-Notes\Eighth.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Images\Music-Notes\Quater.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Images\Music-Notes\SixTeenth.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Metronomer_Icon.png" />
  </ItemGroup>

</Project>
