<Window x:Class="Metronomer.Windows.PracticeChangingNotes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Metronomer.Windows"
        mc:Ignorable="d"
        Title="PracticeChangingNotes" Height="400" Width="300">
    <Grid>
        <Border Background="#FF3A3A3A" Grid.Row="1" Margin="0,-1,0,0">
            <Grid>
                <Grid>
                    <Image x:Name="CurrentSubDivision" Height="95" Width="100" Source="../Images/Music-Notes/Quater.png" Visibility="Visible" Margin="100,40,100,210"/>
                    <TextBlock FontSize="15"  HorizontalAlignment="Left" Margin="10,17,0,0" TextWrapping="Wrap" Text="Current Subdivision:" VerticalAlignment="Top" Height="30" Width="176"/>
                </Grid>
                <Grid Margin="0,40,0,-40">
                    <Image x:Name="NextSubDivision" Height="95" Width="100" Source="../Images/Music-Notes/Quater.png" Visibility="Visible" Margin="100,176,100,60"/>
                    <TextBlock FontSize="15"  HorizontalAlignment="Left" Margin="10,163,0,0" TextWrapping="Wrap" Text="Next Subdivision:" VerticalAlignment="Top" Height="30" Width="176"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
